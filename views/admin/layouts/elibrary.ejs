    <section class="admin-upload" id="admin-upload" aria-hidden="true">
        <h2 style="display: flex; justify-content: space-between;">Upload Resource <span><button type="button" onclick="CloseForm()">Close</button></span></h2>
        <form action="/library/add" id="upload-form" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label for="thumbnail">Thumbnail:</label>
                <input type="file" id="thumbnail" name="thumbnail" accept="image/*" required>
            </div>
            
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required>
            </div>
            
            <div class="form-group">
                <label for="author">Author:</label>
                <input type="text" id="author" name="author" required>
            </div>
            
            <div class="form-group">
                <label for="year">Year:</label>
                <input type="number" id="year" name="year" min="1900" max="2099" required>
            </div>
            
            <div class="form-group">
                <label for="faculty">Faculty:</label>
                <input type="text" id="faculty" name="faculty" required>
            </div>
            
            <div class="form-group">
                <label for="type">Type:</label>
                <select id="type" name="type" required>
                    <option value="textBooks">Textbooks</option>
                    <option value="lecturerSlides">Lecturer Slides</option>
                    <option value="assignments">Assignments</option>
                    <option value="lectureRecordings">Lecture Recordings</option>
                    <option value="pastQuestions">Past Questions</option>
                </select>
            </div>
            
            <div class="form-group">
                <label for="file">File:</label>
                <input type="file" id="file" name="file" required>
            </div>
            
            <div class="form-group">
                <button type="submit">Upload Resource</button>
            </div>
        </form>
    </section>
</section>

<script>
    const showForm = () => {
        document.getElementById("admin-upload").setAttribute("aria-hidden", "false")
    }
    const CloseForm = () => {
        document.getElementById("admin-upload").setAttribute("aria-hidden", "true")
    }
</script>